			departLane="random"						departSpeed="random"
			departPos="random"						
			route="route0hr"						/>
	<flow	id="flow0hl"			type="type5"
		  	begin="0" 				end= "7200"		period="0.001"
			departLane="random"						departSpeed="random"
			departPos="random"						
